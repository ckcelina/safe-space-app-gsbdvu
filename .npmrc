
# Enforce npm as the package manager
engine-strict=true

# Use exact versions when installing dependencies
save-exact=true

# Disable optional dependencies that may cause issues
no-optional=false

# Disable package-lock.json updates during CI
package-lock=true

# Set stricter installation behavior
prefer-offline=false

# Disable update notifier to reduce noise
update-notifier=false

# Use legacy peer dependencies resolution for better compatibility
legacy-peer-deps=false

# Disable progress bars in non-TTY environments
progress=true

# Set fund to false to reduce output noise
fund=false

# Set audit level
audit-level=moderate

# Disable scripts from untrusted packages
ignore-scripts=false
